<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88CC698B"
    android:foregroundTint="#FF9800"
    tools:context=".ListaEjerciciosActivity">

    <Button
        android:id="@+id/btn_lista_a_main"
        android:layout_width="388dp"
        android:layout_height="58dp"
        android:layout_marginBottom="76dp"
        android:background="#432E67"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/Menu_principal"
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_ejercicios"
        app:layout_constraintVertical_bias="0.597" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="381dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#3C4059"
        android:text="@string/listado_ejercicios"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_ejercicios"
        android:layout_width="370dp"
        android:layout_height="438dp"
        android:layout_marginTop="16dp"
        android:background="#3F51B5"
        android:backgroundTint="#A4F1F2F6"
        android:cacheColorHint="#F4EFEF"
        android:focusable="auto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>